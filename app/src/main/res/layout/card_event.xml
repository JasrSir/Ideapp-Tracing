<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="@dimen/activity_vertical_margin"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:id="@+id/linLayName">

                <ImageView
                    android:id="@+id/imgEventPhotoSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_circle"
                    app:srcCompat="@drawable/ic_bug_report_black_48dp"
                    android:cropToPadding="false"
                    android:adjustViewBounds="false" />

                <!-- Name sender -->
                <TextView
                    android:id="@+id/txvEventNameSender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgEventPhotoSender"
                    android:layout_toRightOf="@+id/imgEventPhotoSender"
                    android:background="@color/colorAccent"
                    android:gravity=""
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="Juan Martín"
                    android:textColor="@color/colorText"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Profile image sender -->

            <!-- title event -->
            <TextView
                android:id="@+id/txvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayName"
                android:background="@color/cardview_shadow_start_color"
                android:padding="10dp"
                android:text="Recordatorio de papeles en la próxima cita"
                android:textStyle="bold" />


            <!-- summary event -->
            <TextView
                android:id="@+id/txvEventSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvEventTitle"
                android:background="#EEE"
                android:padding="12dp"
                android:text="En la próxima cita traete papel del culo que el mercadona me ha cerrao niña" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>