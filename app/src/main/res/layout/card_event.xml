<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile image sender -->
        <ImageView
            android:id="@+id/imgEventPhotoSender"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            app:srcCompat="@drawable/ic_bug_report_black_48dp" />

        <!-- Name sender -->
        <TextView
            android:id="@+id/txvEventNameSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgEventPhotoSender"
            android:layout_toRightOf="@+id/imgEventPhotoSender"
            android:background="@color/colorAccent"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Juan Martín"
            android:textColor="@color/colorText"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- title event -->
        <TextView
            android:id="@+id/txvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvEventNameSender"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Recordatorio de papeles en la próxima cita"
            android:textStyle="bold" />

        <!-- summary event -->
        <TextView
            android:id="@+id/txvEventSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvEventTitle"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Recordatorio de papeles en la próxima cita" />

    </RelativeLayout>

</android.support.v7.widget.CardView>