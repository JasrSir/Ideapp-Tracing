<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:padding="16dp"
    android:background="@drawable/images"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >
    <!-- TAmaños del navigation VIEW
    la cabecera va segun el numero de opciones, y algunos moviles
    que tienen una sep abajo y demás, -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:civ_border_width="1dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/navUserName"
        android:src="@drawable/pollo"
        app:civ_border_color="#FFFFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorHint"
        android:layout_above="@+id/navUserEmail"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Juan Antonio Suárez Rosa"
        android:id="@+id/navUserName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorHint"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="juany.sr@gmail.com"
        android:id="@+id/navUserEmail"/>

</RelativeLayout>