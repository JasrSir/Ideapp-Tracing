<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- title event -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilNewEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <EditText
                android:id="@+id/edtNewEventTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:textStyle="bold"
                android:hint="Título del evento"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilNewEventTitle"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Recordatorio de papeles en la próxima cita"
            android:textStyle="bold" />

        <!-- summary event -->
        <TextView
            android:id="@+id/txvEventSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvEventTitle"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Recordatorio de papeles en la próxima cita" />

    </RelativeLayout>



</android.support.v7.widget.CardView>