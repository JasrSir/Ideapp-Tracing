<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jasrsir.tracing.activity.LoginMain_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">

        <!-- Text Welcome -->
        <TextView
            android:id="@+id/txvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/txvWelcome"
            android:textAlignment="center"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:textSize="30sp" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_below="@id/txvWelcome"
            app:srcCompat="@drawable/tracinglogo" />

        <!-- Introduction-->
        <TextView
            android:id="@+id/txvWelcReadme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/txvWelcReadme"
            android:layout_toRightOf="@id/imgLogo"
            android:layout_toEndOf="@id/imgLogo"
            android:layout_below="@id/txvWelcome"
            android:textSize="20sp" />

        <!-- Sign up -->
        <TextView
            android:id="@+id/txvNoAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txvWelcReadme"
            android:layout_toRightOf="@id/imgLogo"
            android:layout_toEndOf="@id/imgLogo"
            android:onClick="onClickRegister"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/txvNoAccount"
            android:textAlignment="center"
            android:textColor="@color/colorAccentText"
            android:textSize="20sp" />

        <!-- Line -->
        <View
            android:id="@+id/viewSepLeft"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_below="@id/txvNoAccount"
            android:layout_toRightOf="@id/imgLogo"
            android:layout_toEndOf="@id/imgLogo"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/txvWelcOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvNoAccount"
            android:layout_toEndOf="@id/viewSepLeft"
            android:layout_toRightOf="@id/viewSepLeft"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/txvWelcOr"
            android:textSize="20sp" />

        <View
            android:id="@+id/viewSepRight"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_below="@+id/txvNoAccount"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/txvWelcOr"
            android:layout_toRightOf="@id/txvWelcOr"
            android:background="@color/cardview_dark_background" />

        <!-- Sign in -->
        <TextView
            android:id="@+id/txvYesAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvWelcOr"
            android:onClick="onClickRegister"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/txvYesAccount"
            android:textAlignment="center"
            android:layout_toRightOf="@id/imgLogo"
            android:layout_toEndOf="@id/imgLogo"
            android:textColor="@color/colorAccentText"
            android:textSize="20sp" />
    </RelativeLayout>


</ScrollView>
